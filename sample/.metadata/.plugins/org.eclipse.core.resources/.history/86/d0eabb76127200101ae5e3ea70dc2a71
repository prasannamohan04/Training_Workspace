package corejava;

import java.util.Scanner;

public class CheckDaysInMonth {

    public static void main(String[] args) {
    	Scanner scr = new Scanner(System.in);

        try {
            System.out.print("Enter month name: ");
            String input = scr.next().trim().toUpperCase();

            try {
                Months2 month = Months2.valueOf(input);
                int  days =  switch (month) {
                case Jan,Mar,May,Jul,Aug,Oct,Dec ->  31;
                case Apr,Jun,Sep,Nov -> 30;
                case Feb -> 28;

                default->throw new InvalidMonthException("Not a valid month");
            };
                System.out.println("Number of days in the given '" + input + "' is " + days);
            } catch (IllegalArgumentException e) {
                throw new InvalidMonthException("Not a valid month");
            }
        } catch (InvalidMonthException e) {
            System.out.println("InvalidMonthException: " + e.getMessage());
        } finally {
            System.out.println("*Program Executed");
            scr.close();
        }
    }
}
